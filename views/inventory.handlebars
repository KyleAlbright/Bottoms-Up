<div id="inventory-list">
{{#each inventories as |inventory|}}
<section style="background-color: #eee;">
    <div class="container py-5 ">
      <div class="row justify-content-center mb-3">
        <div class="col-md-12 col-xl-10">
          <div class="card shadow-0 border rounded-3">
            <div class="card-body bg-image" style="background-image: url('/assets/wood2.jpg');">
              
              <div class="row">
                <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                  <div class="bg-image hover-zoom ripple rounded ripple-surface">
                    {{{choose_image inventory.category }}}
                    <a href="#!">
                      <div class="hover-overlay">
                        <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                      </div>
                    </a>
                  </div>
                </div>
                <div class="col-md-6 col-lg-6 col-xl-6">
                  <h5 class=".text-secondary">{{inventory.product}}</h5>
                  <div class="mt-1 mb-0 text-muted small">
                    <span>{{inventory.category}}</span>
                  </div>
                  
        
                </div>
                <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                  <div class="d-flex flex-row align-items-center mb-1">
                    <input name="inventory-quantity" type="number" placeholder="{{inventory.quantity}}" id="{{inventory.id}}" class="form-input w-5px"/>
                  </div>
                  <div class="d-flex flex-column mt-4">
                    <button class="btn btn-primary update-quantity" type="click" data-id="{{inventory.id}}" id="update">Update</button>
                    <button class="btn btn-outline-danger btn-sm mt-2" data-id="{{inventory.id}}" type="button">
                      Delete Item
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </section>
  {{/each}}
</div>

<script src="/js/updateInventory.js"></script>